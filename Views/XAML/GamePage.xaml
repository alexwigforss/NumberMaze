<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridDemos.Views.XAML.GamePage"
             xmlns:local="clr-namespace:_2DGraphicsDrawing"
             Title="Basic Grid demo">
    
    <ContentPage.Resources>
        <local:GraphicsDrawable x:Key="drawable"/>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="400" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <BoxView Color="Green" />
        <Label Text="Stats AND Messages Area"
               HorizontalOptions="Center"
               VerticalOptions="Center" />

        <BoxView Grid.Row="1"
                 Color="Teal" />

        <GraphicsView
            HorizontalOptions="Fill"
            Drawable="{StaticResource drawable}"
            WidthRequest="400"
            HeightRequest="400" />
        
        <Grid x:Name="gameGrid" Grid.Row="1">
            <!-- Define your grid rows and columns here -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
                <!-- Add more rows as needed -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <!-- Add more columns as needed -->
            </Grid.ColumnDefinitions>

            <!-- Add Image controls to your grid cells -->
            <Image Source="dotnet_bot.png"
                       Grid.Row="5"
                       Grid.Column="5"
                       ToolTipProperties.Text="Click to Save your data"/>
            <Label Text="100"
                       BackgroundColor="Gray"
                       Opacity="0.8"
                       ZIndex="1"
                       MaximumHeightRequest="20"
                       MaximumWidthRequest="20"
                       AbsoluteLayout.LayoutBounds="0.2, 0.2, 50, 50"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       Grid.Row="0"
                       Grid.Column="1"/>
            
            <Image Source="fruit_tree2.png"  Grid.Row="0" Grid.Column="1" />
            <Image Source="giphy.gif"  Grid.Row="0" Grid.Column="2" />
            <Image Source="fruit_tree2.png"  Grid.Row="0" Grid.Column="3" />
            <Image Source="fruit_tree2.png"  Grid.Row="0" Grid.Column="4" />

            <Image Source="walk_attack2.png" Grid.Row="1" Grid.Column="1" />


            <Image Source="fruit_tree2.png"  Grid.Row="4" Grid.Column="4" />
            <Image Source="fruit_tree2.png"  Grid.Row="6" Grid.Column="6" />
            <Image Source="fruit_tree2.png"  Grid.Row="7" Grid.Column="7" />
            <Image Source="fruit_tree2.png"  Grid.Row="8" Grid.Column="8" />
            <Image Source="fruit_tree2.png"  Grid.Row="9" Grid.Column="9" />
            <Image Source="orc.png"          Grid.Row="4" Grid.Column="2" />

            <!-- Add more images to other grid cells -->
        </Grid>

        <BoxView Grid.Row="2"
                 Color="Red" />
        <Label Grid.Row="2"
               Text="Buttons AND/OR Pickups"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <!-- Buttons -->
        <HorizontalStackLayout Grid.Row="2">
            
            <Button Text="LEFT"
                    Clicked="Button_Left_Clicked"
                    />
            <Button Text="UP" 
                    Clicked="Button_Up_Clicked"
                    />
            <Button Text="DOWN" 
                    Clicked="Button_Down_Clicked"
                    />
            <Button Text="RIGHT" 
                    Clicked="Button_Right_Clicked"
                    />
            
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
