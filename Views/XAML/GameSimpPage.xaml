<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridDemos.Views.XAML.GameSimpPage"
             Title="Simplified rows and columns syntax demo">
  <Grid RowDefinitions="*, 400, 2*"
        ColumnDefinitions="*">
        <BoxView Color="Green" />
        <Label Text="Stats AND Messages Area"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="1"
                 Color="Teal" />
        <Image Grid.Row="1"
               MinimumHeightRequest="400"
               MinimumWidthRequest="400"
               Source="dotnet_bot.png" />
        <Label Grid.Row="1"
               Text="Game Area"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <BoxView Grid.Row="2"
                 Color="Red" />
        <Label Grid.Row="2"
               Text="Buttons AND/OR Pickups"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Grid>
</ContentPage>
